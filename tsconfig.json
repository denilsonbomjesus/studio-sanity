{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Preserve",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["vite/client"],
    "moduleResolution": "node"
  },
  "include": ["vite-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
